<head>
    <title>Oculux | Login</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta name="description" content="Oculux Bootstrap 4x admin is super flexible, powerful, clean &amp; modern responsive admin dashboard with unlimited possibilities.">
    <meta name="author" content="GetBootstrap, design by: puffintheme.com">

    <link rel="icon" href="~/Assets/Admin/oculux/puffintheme.com/demo/oculux/documentation/favicon.ico" type="image/x-icon">
    <!-- VENDOR CSS -->

    <link href="~/Assets/Admin/oculux/puffintheme.com/demo/oculux/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <link href="~/Assets/Admin/oculux/puffintheme.com/demo/oculux/assets/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <link href="~/Assets/Admin/oculux/puffintheme.com/demo/oculux/assets/vendor/animate-css/vivify.min.css" rel="stylesheet" />
    <!-- MAIN CSS -->

    <link href="~/Assets/Admin/oculux/puffintheme.com/demo/oculux/html/assets/css/site.min.css" rel="stylesheet" />
</head>
<body class="theme-cyan font-montserrat">

    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="bar1"></div>
            <div class="bar2"></div>
            <div class="bar3"></div>
            <div class="bar4"></div>
            <div class="bar5"></div>
        </div>
    </div>

    <div class="pattern">
        <span class="red"></span>
        <span class="indigo"></span>
        <span class="blue"></span>
        <span class="green"></span>
        <span class="orange"></span>
    </div>

    <div class="auth-main particles_js">
        <div class="auth_div vivify popIn">
            <div class="auth_brand">
                <a class="navbar-brand" href="javascript:void(0);"><img src="../assets/images/icon.svg" width="30" height="30" class="d-inline-block align-top mr-2" alt="">Oculux</a>
            </div>
            <div class="card">
                @using (@Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    <div class="body">

                        <p class="lead">
                            Login @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </p>

                        <form class="form-auth-small m-t-20" action="http://puffintheme.com/demo/oculux/html/index.html">
                            <div class="form-group">
                                <label for="signin-email" class="control-label sr-only">Email</label>

                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @autofocus = "autofocus", @style = "border-radius: 25px", @placeholder = "Nhập tài khoản" })
                            </div>
                            <div class="form-group">
                                <label for="signin-password" class="control-label sr-only">Password</label>

                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @style = "border-radius: 25px", @placeholder = "Nhập mật khẩu" })
                            </div>
                            <div class="form-group clearfix">
                                <label class="fancy-checkbox element-left">
                                    <input type="checkbox">
                                    <span>@Html.CheckBoxFor(model => model.RememberMe)Remember me</span>
                                </label>
                            </div>
                            <button type="submit" class="btn btn-primary btn-round btn-block">Đăng nhập</button>
                            <div class="bottom">
                                <span class="helper-text m-b-10"><i class="fa fa-lock"></i> <a href="page-forgot-password.html">Forgot password?</a></span>
                                <span>Don't have an account? <a href="page-register.html">Register</a></span>
                            </div>
                        </form>


                    </div>
                }
                </div>
        </div>
        <div id="particles-js"></div>
    </div>
    <!-- END WRAPPER -->


    <script src="~/Assets/Admin/oculux/puffintheme.com/demo/oculux/html/assets/bundles/libscripts.bundle.js"></script>
  
    <script src="~/Assets/Admin/oculux/puffintheme.com/demo/oculux/html/assets/bundles/vendorscripts.bundle.js"></script>
  
    <script src="~/Assets/Admin/oculux/puffintheme.com/demo/oculux/html/assets/bundles/mainscripts.bundle.js"></script>
</body>

